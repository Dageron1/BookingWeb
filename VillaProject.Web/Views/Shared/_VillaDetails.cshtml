@model Villa

<div class="container">
    <div class="row">
        <div class="col-12 col-md-5 mt-3">
            @if (Model.VillaImages != null && Model.VillaImages.Count > 0)
            {
                @* string id = $"a{Model.Id}"; *@
                <div id="detailsCarousel-@(Model.Id)" @* id="@id" *@ class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-inner rounded-3 shadow-sm">
                        @foreach (var imageWithIndex in Model.VillaImages
                       .Select((image, index) => new { Image = image, Index = index }))
                        {
                            <div class="@(imageWithIndex.Index==0?"carousel-item active":"carousel-item")">
                                <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="..." style="max-height:280px;">
                            </div>
                        }
                    </div>
                    <div style="position:relative; top:-130px;" class="d-flex">
                        <button class="carousel-control-prev" type="button" data-bs-target="#detailsCarousel-@(Model.Id)" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#detailsCarousel-@(Model.Id)" data-bs-slide-to="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <div class="carousel-indicators position-static">
                        @foreach (var imageWithIndex in
                       Model.VillaImages
                       .Select((image, index) => new { Image = image, Index = index }))
                        {
                            <div class="border-3">
                                <button type="button" data-bs-target="#detailsCarousel-@(Model.Id)" data-bs-slide-to="@imageWithIndex.Index" class="active thumbnail " aria-current="true" aria-label="Slide 1">
                                    <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                </button>
                            </div>
                        }

                    </div>

                </div>

            }
            else
            {
                <img src="https://placehold.co/500x500/png" class="card-img-top rounded" />
            }
        </div>
        <div class="col-md-7">
            <div class="container">
                <div class="row d-flex">

                    <p class="card-title text-dark mt-1" style="font-size:xx-large">Facilities</p>
                    @if (Model.Facilities != null && Model.Facilities.Count() > 0)
                    {
                        <div class="card p-0 col-md-3" style="width: 9rem;">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/pastel-glyph/64/fast-food--v2.png" alt="fast-food--v2" /> Food
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "Food")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>

                                        </li>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/windows/32/cooking.png" alt="cooking" /> Cooking
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "Cooking")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>

                                        </li>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/ios/50/internet--v1.png" alt="internet--v1" /> Internet
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "Internet")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>

                                        </li>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/ios/50/mountain-city.png" alt="mountain-city" /> View
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "View")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>
                                        </li>
                                    }
                                }
                            </div>
                        </div>
                    }            
                </div>

                <div class="row d-flex">

                    @if (Model.Facilities != null && Model.Facilities.Count() > 0)
                    {
                        <div class="card p-0 col-md-3" style="width: 9rem;">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/ios/50/place-marker--v1.png" alt="place-marker--v1" /> Territory
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "Territory")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>

                                        </li>
                                    }
                                }
                            </div>

                        </div>

                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                <img width="25" height="25" src="https://img.icons8.com/ios/50/room.png" alt="room" /> Room
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Facilities.Count; i++)
                                {
                                    if (Model.Facilities[i].Category == "Room")
                                    {
                                        <li class="list-unstyled">

                                            <label class="ms-2"><img width="20" height="20" src="@Model.Facilities[i].Logo" alt="microwave" /> <span style="font-size: 0.8em;">@Model.Facilities[i].Name</span> </label>

                                        </li>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                 Coming soon..
                            </div>
                            <div class="card-body">
                                
                            </div>
                        </div>
                        <div class="card p-0 col-md-3">
                            <div class="card-title mt-1 text-center fw-bold">
                                 Coming soon..
                            </div>
                            <div class="card-body">
                                
                            </div>
                        </div>
                    }
                    <figure class="text-center mt-3">
                        <blockquote class="blockquote">
                            <p>@Html.Raw(Model.Description)</p>
                        </blockquote>
                        <figcaption class="blockquote-footer">
                            Someone famous in <cite title="Source Title">Gachi Company</cite>
                        </figcaption>
                    </figure>

                </div>
            </div>
            <div class="row col-12">
                <span class="text-end p-0 pt-3 m-0">
                    <span class="float-right">Max Occupancy : <span class="fw-bolder">@Model.Occupancy adults</span> </span><br />
                    <span class="float-right pt-1">Villa Size : <span class="fw-bolder">@Model.Sqft sqft</span></span><br />
                    <p class="text-black fw-bold pt-1">
                        USD
                        <span style=" #ff6a00">
                            @Model.Price.ToString("c").TrimEnd('₽') / night
                        </span>
                    </p>
                </span>
            </div>
        </div>
    </div>
</div>



