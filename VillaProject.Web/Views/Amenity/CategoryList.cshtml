@model IEnumerable<Category>

<div class="w-100 card border-0 p-4 mt-5">
    <div class="card-header bg-success bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-3">
        <div class="row pb-3">
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                       
                        <td>
                            <div class="w-75 btn-group" rold="group">
                               
                                <a asp-controller="Amenity" asp-action="DeleteCategory" asp-route-categoryId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

