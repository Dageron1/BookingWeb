@model AmenityVM
<section>
    <div class="container">
        <div class="w-100 card border-0 p-4 mt-5">
            <div class="card-header bg-success bg-gradient m-lg-0 py-4">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white py-2">Create Facility</h2>
                    </div>
                </div>
            </div>
            <div class="card-body border p-4">
                @* enctype="multipart/form-data" для загрузки картинок и т д *@
                <form method="post" class="row" enctype="multipart/form-data">
                    <div class="p-3">
                        @*  <div asp-validation-summary="All"></div> *@ @* показываем кастомную валидацию *@
                        <div class="form-floating py-1 col-12">
                            <select asp-for="@Model.Facility.Category" asp-items="@Model.FacilityList"
                                    class="form-select border shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="@Model.Facility.Id" class="ms-2">Category</label>
                            <span asp-validation-for="@Model.Facility.Id" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input asp-for="@Model.Facility.Name" class="form-control border shadow" />
                            <label asp-for="@Model.Facility.Name" class="ms-2"></label>
                            <span asp-validation-for="@Model.Facility.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input asp-for="@Model.Facility.Logo" class="form-control border shadow" />
                            <label asp-for="@Model.Facility.Logo" class="ms-2"></label>
                            <span asp-validation-for="@Model.Facility.Logo" class="text-danger"></span>
                        </div>
                       
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Create
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</section>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        /* partial tag нужен для работы частичных представлений */
    }
}