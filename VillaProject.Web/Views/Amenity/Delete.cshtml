@model Facility

<div class="w-100 card border-0 p-4 mt-5">
    <div class="card-header bg-success bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Facility</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input hidden asp-for="@Model.Id" />
            <div class="p-3">

                <table class="table table-bordered table-striped w-50">
                    <tbody>

                        <tr>
                            <td>
                                <label class="ms-2"><img width="20" height="20" src="@Model.Logo" alt="microwave" /> @Model.Name </label>
                            </td>
                            <td>
                                @Model.Category
                            </td>
                        </tr>

                    </tbody>
                </table>
                @*  <div asp-validation-summary="All"></div> *@ @* показываем кастомную валидацию *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        /* partial tag нужен для работы частичных представлений */
    }
}